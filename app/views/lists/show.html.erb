<div class="home-banner">
  <h1><%= @list.name %></h1>
</div>

<div class="container">
  <h1> Informaci√≥n</h1>

  <div class="card">
    <div class="card-body">
      <h2 class="card-title"><%= @list.name %></h2>
      <ul class="list-group">
      </ul>
      <%= link_to 'Edit', edit_list_path(@list), class: "btn btn-secondary"%>
      <%= link_to 'Bookmark', new_list_bookmark_path(@list), class: "btn btn-secondary"%>
      <%= link_to 'Destroy', list_path(@list), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="card-grid">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card">
        <%= image_tag bookmark.movie.poster_url %>
        <div class="card-body">
          <h4><%= bookmark.movie.title %></h4>
          <p><%= bookmark.movie.overview %></p>
          <li class="list-group-item"><%= bookmark.comment %></li>
          <%= link_to "Remove",
                bookmark_path(bookmark),
                method: :delete,
                class: "btn btn-secondary",
                data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <%= link_to 'Back', lists_path, class:"btn btn-dark" %>
</div>
